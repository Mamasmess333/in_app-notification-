<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inclass17">

    <!-- Required for Firebase + Flutter -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- (Optional but recommended) Wake the device for notification processing -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:label="inclass17"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Required for Firebase Messaging background notifications -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="high_importance_channel" />

        <!-- Flutter auto-injects Firebase initialization code -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Required when app is opened from notification tap -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- Splash screen background -->
        <meta-data
            android:name="io.flutter.embedding.android.NormalTheme"
            android:resource="@style/NormalTheme" />

        <!-- Flutter engine -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

</manifest>
